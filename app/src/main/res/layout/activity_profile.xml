<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/background"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/back_prof"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/Tembus"/>

    <ImageView
        android:layout_width="258dp"
        android:layout_height="168dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="PROFILE"
        android:textColor="@color/Putih"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/Putih"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:text="Nama User  : "

            />

        <TextView
            android:id="@+id/nama_prof"
            android:layout_width="204dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:text=""
            android:textColor="@color/Putih"
            android:textSize="15sp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:onClick="editnama"
            android:src="@drawable/edit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/Putih"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:text="Email           : "/>

        <TextView
            android:id="@+id/email_prof"
            android:layout_width="204dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/Putih"
            android:textSize="15sp" />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:onClick="editemail"
            android:src="@drawable/edit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/Putih"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:text="Nomer Telp : "/>
        <TextView
            android:id="@+id/telpon_prof"
            android:layout_width="204dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/Putih"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:text=""/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:onClick="edittlp"
            android:src="@drawable/edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/Putih"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:text="Alamat            : "/>
        <TextView
            android:id="@+id/alamat_prof"
            android:layout_width="204dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/Putih"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text=""/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:onClick="editalamat"
            android:src="@drawable/edit"/>
    </LinearLayout>
    <Button
        android:id="@+id/ubahpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp"
        android:text="Ubah Passowrd"
        android:textColor="#000000"
        android:background="@drawable/menu"/>

</LinearLayout>